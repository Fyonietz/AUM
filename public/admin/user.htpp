<!DOCTYPE html>
<html lang="en">
<head>
    @head
    <title>CRUD User</title>
    <link rel="stylesheet" href="/admin/style-admin.css">
</head>

<body>
  <div class="nav">
    <a href="/admin">Kembali</a>
  </div>
  
  <div class="register-user">
  <h1 id="toggleRegister">Register User</h1>

  <div id="registerForm" class="register-form toggle-container hidden">
    <input type="text" name="nama" id="nama" placeholder="Nama">
    <input type="text" name="password" id="password" placeholder="Password">

    <select name="Kelas" id="Kelas">
      <option value="X TJKT 1">X TJKT 1</option>
      <option value="X TJKT 2">X TJKT 2</option>
      <option value="X TJKT 3">X TJKT 3</option>
      <option value="X TJKT 4">X TJKT 4</option>
      <option value="X DKV 1">X DKV 1</option>
      <option value="X DKV 2">X DKV 2</option>
      <option value="X RPL 1">X RPL 1</option>
      <option value="X RPL 2">X RPL 2</option>
      <option value="X BC">X BC</option>
    </select>

    <div class="btn-place">
      <button id="save_user" onclick="save_user()">Save</button>
      <button id="toggleRegister" >Cancel</button>
    </div>
  </div>
</div>
  <div class="delete-user">
  <h1 class="toggle-btn" data-target="deleteForm" data-bg="delete-user">Hapus User</h1>
  <div id="deleteForm" class="toggle-container hidden">
    <input type="text" id="searchName" placeholder="Cari berdasarkan nama" />
    <p id="deleteMessage"></p>
    <button id="deleteUserBtn" onclick="deleteUser()">Hapus Akun</button>
  </div>
</div>

  <div class="daftar-user">
    <h1 id="toggleDaftar">Daftar User</h1>
    <div id="iframeContainer" class="toggle-container hidden">
      <iframe src="/dashboard/siswa" frameborder="0"></iframe>
    </div>
  </div>
  
    <script src="/admin/script-admin.js"></script>
</body>
</html>
